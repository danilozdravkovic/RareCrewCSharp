@model List<EmployeeWorkStats>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Total Time Worked (hours)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            var rowClass = employee.TotalTimeWorked < 100 ? "bg-warning" : "";
            <tr class="@rowClass">
                <td>@(string.IsNullOrEmpty(employee.Name) ? "Unknown" : employee.Name)</td>
                <td class="text-center">@employee.TotalTimeWorked</td>
            </tr>
        }
    </tbody>
</table>
